<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F7"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ============================================ -->
        <!-- STATUS INDICATORS ROW -->
        <!-- ============================================ -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Hidden TextViews to maintain binding compatibility -->
            <TextView
                android:id="@+id/tvModeTitle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvModeSubtitle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <!-- Status indicators row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Bluetooth status badge -->
                <LinearLayout
                    android:id="@+id/bluetoothStatusBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/bg_status_badge_neutral">

                    <View
                        android:id="@+id/bluetoothStatusDot"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/bg_status_dot_gray" />

                    <TextView
                        android:id="@+id/tvBluetoothStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Scale: Disconnected"
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="#6B7280" />
                </LinearLayout>

                <View
                    android:layout_width="12dp"
                    android:layout_height="0dp" />

                <!-- GPS status badge -->
                <LinearLayout
                    android:id="@+id/gpsStatusBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/bg_status_badge_neutral">

                    <View
                        android:id="@+id/gpsStatusDot"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/bg_status_dot_gray" />

                    <TextView
                        android:id="@+id/tvGpsStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="GPS: Acquiring"
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="#6B7280" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- ============================================ -->
        <!-- WEIGHT CARD (Hero Component) -->
        <!-- ============================================ -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FAFAFA"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Weight"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    android:textColor="#6B7280" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textSize="56sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="kg"
                        android:textSize="24sp"
                        android:textColor="#6B7280" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvScaleStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Waiting for scale connection"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="#9CA3AF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConnectScale"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Connect Scale"
                    app:icon="@drawable/ic_bluetooth"
                    app:iconTint="@color/primary_color" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ============================================ -->
        <!-- QR SCAN SECTION -->
        <!-- ============================================ -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardQrScan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeColor="@color/mint_glow"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/cardWeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Default state: Scan button -->
            <LinearLayout
                android:id="@+id/qrScanPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_icon_container_mint">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:contentDescription="QR Code"
                        app:srcCompat="@drawable/ic_qr_scan" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Scan Bag QR Code"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textStyle="bold"
                    android:textColor="#111827" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Point your camera at the bag&apos;s QR code"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="#6B7280" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScanQr"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Open Scanner"
                    app:icon="@drawable/ic_qr_scan"
                    app:iconTint="@color/primary_color"
                    android:textColor="@color/primary_color" />
            </LinearLayout>

            <!-- Scanned state: Show QR info -->
            <LinearLayout
                android:id="@+id/qrScannedInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_status_success">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:contentDescription="Scanned"
                            app:srcCompat="@drawable/ic_check_circle" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bag Scanned"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold"
                            android:textColor="#059669" />

                        <TextView
                            android:id="@+id/tvQrCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="QR: --"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="#6B7280"
                            android:maxLines="1"
                            android:ellipsize="middle" />

                        <TextView
                            android:id="@+id/tvQrTimestamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scanned just now"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="#9CA3AF" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScanAgain"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="end"
                    android:text="Scan Different Bag"
                    android:textColor="@color/primary_color" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- QR Error message -->
        <TextView
            android:id="@+id/tvQrCodeError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp"
            android:text="Invalid QR format"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/errorAccent"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cardQrScan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ============================================ -->
        <!-- ACTION BUTTONS (between QR card and Session Summary) -->
        <!-- ============================================ -->
        
        <LinearLayout
            android:id="@+id/sessionActionsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvQrCodeError"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Add Bag Button (Outlined Style) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddBag"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="+ Add Bag"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:enabled="false"
                app:cornerRadius="16dp"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="2dp"
                app:rippleColor="#2000897B" />

            <!-- Submit Button (Primary Filled - Darker Green) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitAll"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="Submit"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:enabled="false"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/primary_color_dark"
                app:icon="@drawable/ic_check_circle"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:rippleColor="#40FFFFFF" />
        </LinearLayout>

        <!-- ============================================ -->
        <!-- SESSION SUMMARY PANEL -->
        <!-- ============================================ -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSessionSummary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeColor="#F3F4F6"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/sessionActionsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Session label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp"
                    android:text="Current Session"
                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                    android:textColor="#9CA3AF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">

                    <!-- Bags in session -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bags in session"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="#6B7280" />

                        <TextView
                            android:id="@+id/tvSessionBagCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                            android:textStyle="bold"
                            android:textColor="#111827" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#E5E7EB" />

                    <!-- Total weight -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total weight"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="#6B7280" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:id="@+id/tvSessionTotalWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textStyle="bold"
                                android:textColor="#111827" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="kg"
                                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                android:textColor="#6B7280" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Loading indicator for submission -->
        <ProgressBar
            android:id="@+id/progressSubmit"
            style="@style/Widget.Material3.CircularProgressIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:indeterminate="true"
            app:layout_constraintTop_toTopOf="@id/sessionActionsLayout"
            app:layout_constraintBottom_toBottomOf="@id/sessionActionsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Legacy single submit button (hidden, kept for backward compatibility) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Save Collection"
            android:visibility="gone"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@id/cardSessionSummary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ============================================ -->
        <!-- FOOTER STATUS ROW -->
        <!-- ============================================ -->
        <LinearLayout
            android:id="@+id/footerStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/cardSessionSummary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvPendingSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending sync: 0"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="#9CA3AF" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginHorizontal="12dp"
                android:background="#D1D5DB" />

            <TextView
                android:id="@+id/tvLocationCoords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accuracy: --"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="#9CA3AF" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
