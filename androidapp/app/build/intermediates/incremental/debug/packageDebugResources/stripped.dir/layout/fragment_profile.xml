<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#F4F5F7">

    <TextView
        android:id="@+id/textProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="#0F172A"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Operator"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="#0F172A"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: -"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="#0F172A"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textProfileRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role: Operator"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="#0F172A"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textProfileFacility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facility: -"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="#0F172A" />

</LinearLayout>
