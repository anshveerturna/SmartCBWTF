<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:paddingBottom="24dp">

        <!-- Header / App bar -->
        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="14dp">

                <FrameLayout
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_logo_container">

                    <ImageView
                        android:id="@+id/imgLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:contentDescription="SmartCBWTF Logo"
                        app:srcCompat="@drawable/ic_logo_smartcbwtf_green" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="14dp">

                    <TextView
                        android:id="@+id/textAppName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SmartCBWTF"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:letterSpacing="0.01" />

                    <TextView
                        android:id="@+id/textAppSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Operations Portal"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="#707070" />
                </LinearLayout>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatarView"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="Profile"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                    android:background="@drawable/bg_avatar_teal"
                    app:tint="@android:color/white"
                    app:srcCompat="@drawable/ic_avatar_placeholder" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E7EB"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- Greeting card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardGreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/surface_color"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/headerContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/textGreetingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, Operator"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textStyle="bold"
                    android:textColor="#111827" />

                <TextView
                    android:id="@+id/textGreetingSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Manage pickups and verifications for today."
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="#6B7280" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action cards container -->
        <LinearLayout
            android:id="@+id/actionCardsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:layout_constraintTop_toBottomOf="@id/cardGreeting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent">

                <!-- Gradient Background Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_gradient_pickup">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Pickup Waste"
                        android:background="@drawable/bg_icon_container_translucent"
                        android:padding="12dp"
                        app:srcCompat="@drawable/ic_pickup_outline" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:id="@+id/textPickupTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pickup Waste"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/textPickupSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start HCF collection"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="#E0F2F1" />
                    </LinearLayout>
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@android:color/white"
                        app:srcCompat="@drawable/ic_chevron_right" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/mint_glow"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Verify at CBWTF"
                        android:background="@drawable/bg_icon_container_mint"
                        android:padding="12dp"
                        app:srcCompat="@drawable/ic_verify_outline" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:id="@+id/textVerifyTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Verify at CBWTF"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold"
                            android:textColor="#111827" />

                        <TextView
                            android:id="@+id/textVerifySubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scan &amp; verify incoming loads"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="#9CA3AF"
                        app:srcCompat="@drawable/ic_chevron_right" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/mint_glow"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Register HCF"
                        android:background="@drawable/bg_icon_container_mint"
                        android:padding="12dp"
                        app:srcCompat="@drawable/ic_register_outline" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:id="@+id/textRegisterTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Register HCF"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold"
                            android:textColor="#111827" />

                        <TextView
                            android:id="@+id/textRegisterSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add a new healthcare facility"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="#9CA3AF"
                        app:srcCompat="@drawable/ic_chevron_right" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Status strip -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeColor="#F3F4F6"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/actionCardsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:baselineAligned="false">

                <!-- Left: Pending -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <ImageView
                        android:id="@+id/iconPending"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Pending"
                        app:tint="@color/warningAccent"
                        app:srcCompat="@drawable/ic_pending" />
                        
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">
                        
                        <TextView
                            android:text="Pending events"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="#6B7280"/>
                            
                        <TextView
                            android:id="@+id/textPendingValue"
                            android:text="3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold"
                            android:textColor="#111827"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="#E5E7EB"
                    android:layout_marginHorizontal="8dp"/>

                <!-- Right: Sync -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp">
                    
                    <ImageView
                        android:id="@+id/iconSync"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Sync"
                        app:tint="@color/successAccent"
                        app:srcCompat="@drawable/ic_sync_status" />
                        
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">
                        
                        <TextView
                            android:text="Last sync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="#6B7280"/>
                            
                        <TextView
                            android:id="@+id/textSyncValue"
                            android:text="2 min ago"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold"
                            android:textColor="#111827"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Settings"
            android:textColor="#6B7280"
            app:icon="@drawable/ic_settings"
            app:iconTint="#6B7280"
            app:layout_constraintTop_toBottomOf="@id/cardStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
