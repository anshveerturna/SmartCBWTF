<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F7"
    android:padding="24dp">

    <!-- Header Icon -->
    <FrameLayout
        android:id="@+id/iconContainer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_logo_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:contentDescription="Permissions"
            app:srcCompat="@drawable/ic_settings"
            app:tint="@color/primary_color" />
    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="App Permissions"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
        android:textStyle="bold"
        android:textColor="#111827"
        app:layout_constraintTop_toBottomOf="@id/iconContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SmartCBWTF needs the following permissions to work properly. Please grant all permissions to continue."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="#6B7280"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Permissions List Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPermissions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Location Permission -->
            <LinearLayout
                android:id="@+id/permissionLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_location"
                    app:tint="#6B7280"
                    android:contentDescription="Location" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                        android:textColor="#111827" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required for GPS tracking during pickups"
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="#9CA3AF" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconLocationStatus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_check_circle"
                    app:tint="#9CA3AF"
                    android:contentDescription="Status" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="12dp"
                android:background="#F3F4F6" />

            <!-- Camera Permission -->
            <LinearLayout
                android:id="@+id/permissionCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_qr_scan"
                    app:tint="#6B7280"
                    android:contentDescription="Camera" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Camera"
                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                        android:textColor="#111827" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required for scanning QR codes on bags"
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="#9CA3AF" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconCameraStatus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_check_circle"
                    app:tint="#9CA3AF"
                    android:contentDescription="Status" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="12dp"
                android:background="#F3F4F6" />

            <!-- Bluetooth Permission -->
            <LinearLayout
                android:id="@+id/permissionBluetooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_bluetooth"
                    app:tint="#6B7280"
                    android:contentDescription="Bluetooth" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bluetooth"
                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                        android:textColor="#111827" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required for connecting to weight scale"
                        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                        android:textColor="#9CA3AF" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iconBluetoothStatus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_check_circle"
                    app:tint="#9CA3AF"
                    android:contentDescription="Status" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Grant Permissions Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGrantPermissions"
        style="@style/Widget.Material3.Button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:text="Grant Permissions"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/primary_color"
        app:layout_constraintTop_toBottomOf="@id/cardPermissions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Continue Button (shown when all granted) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        style="@style/Widget.Material3.Button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:text="Continue to App"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/primary_color_dark"
        app:layout_constraintTop_toBottomOf="@id/cardPermissions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Skip Text -->
    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Skip for now"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
        android:textColor="#9CA3AF"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnGrantPermissions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
