<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SmartCBWTF" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_variant</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="popupMenuStyle">@style/PopupMenu.Premium</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Premium</item>
    </style>

    <!-- Premium Popup Menu Style -->
    <style name="PopupMenu.Premium" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
        <item name="android:popupElevation">8dp</item>
    </style>

    <style name="PopupMenu.Premium.Item" parent="Widget.Material3.PopupMenu">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">52dp</item>
    </style>
</resources>
